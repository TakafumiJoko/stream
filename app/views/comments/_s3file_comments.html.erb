<% if s3file.comments.present? %>
  <p>コメント件数：<%= s3file.comments.count %></p>
  <% s3file.comments.each do |comment| %>
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
    <% if comment.user == current_user %>
      <div class="comment-delete">
        <%= link_to "削除", s3file_comment_path(comment.s3file, comment), method: :delete, remote: true, data: {confirm: "本当に削除しますか？"} %>
      </div>
    <% end %>
  <% end %>
<% else %>
  <p>コメントはまだありません</p>
<% end %>